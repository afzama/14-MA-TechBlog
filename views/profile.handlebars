<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Blogpost:</h3>

    <form class="form new-blog-form">
      <div class="form-group">
        <label for="blogpost-title">Blogpost name:</label>
        <input class="form-input" type="text" id="blogpost-title" name="blogpost-title" />
      </div>
      <div class="form-group">
        <label for="blogpost-post_text">New Blog Post:</label>
        <textarea class="form-input" id="blogpost-post_text" name="blogpost-post_text"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  {{#if blogpostData}}
  <div class="col-md-6 project-list">
    <h3>Current Blogposts:</h3>

    {{#each blogpostData as |Blogpost|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/blogpost/{{blogpost.id}}">{{blogpost.title}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{blogpost.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./../public/js/profile.js"></script>
